        border-color: #10b981;
    }
</style>

<script>
    let map = null;
    let marker = null;
    let circle = null;
    let isSubmitting = false;

    $(document).ready(function() {
        initializeMap();
        setupFormValidation();
        
        $('#lookupForm').on('submit', function(e) {
            e.preventDefault();
            if (!isSubmitting) {
                searchCellLocation();
            }
        });
    });

    function initializeMap() {
        try {
            if (!map) {
                map = L.map('map').setView([-7.7956, 110.3695], 13);
                
                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: ' OpenStreetMap',
                    maxZoom: 19,
                    minZoom: 3
                }).addTo(map);

                // Fix map size issue
                setTimeout(() => {
                    map.invalidateSize();
                }, 100);
            }
        } catch (error) {
            console.error('Map initialization error:', error);
            showError('Gagal menginisialisasi peta. Pastikan koneksi internet aktif.');
        }
    }

    function setupFormValidation() {
        // Real-time validation
        $('#mcc, #mnc, #lac, #cid').on('input', function() {
            const field = $(this);
            const value = field.val();
            const fieldName = field.attr('name');
            
            clearFieldError(fieldName);
            
            if (value && parseInt(value) < 0) {
                showFieldError(fieldName, 'Nilai tidak boleh negatif');
                field.addClass('error').removeClass('success');
            } else if (value) {
                field.addClass('success').removeClass('error');
            }
        });

        $('#radioType').on('change', function() {
            const field = $(this);
            clearFieldError('radio_type');
            if (field.val()) {
                field.addClass('success').removeClass('error');
            }
        });
    }

    function validateForm() {
        let isValid = true;
        clearAllErrors();

        const radioType = $('#radioType').val();
        const mcc = $('#mcc').val();
        const mnc = $('#mnc').val();
        const lac = $('#lac').val();
        const cid = $('#cid').val();

        if (!radioType) {
            showFieldError('radioType', 'Radio type harus dipilih');
            $('#radioType').addClass('error');
            isValid = false;
        }

        if (!mcc || parseInt(mcc) < 1 || parseInt(mcc) > 999) {
            showFieldError('mcc', 'MCC harus antara 1-999');
            $('#mcc').addClass('error');
            isValid = false;
        }

        if (!mnc || parseInt(mnc) < 0 || parseInt(mnc) > 999) {
            showFieldError('mnc', 'MNC harus antara 0-999');
            $('#mnc').addClass('error');
            isValid = false;
        }

        if (!lac || parseInt(lac) < 0) {
            showFieldError('lac', 'LAC harus diisi dengan nilai positif');
            $('#lac').addClass('error');
            isValid = false;
        }

        if (!cid || parseInt(cid) < 0) {
            showFieldError('cid', 'CID harus diisi dengan nilai positif');
            $('#cid').addClass('error');
            isValid = false;
        }

        return isValid;
    }

    function showFieldError(fieldName, message) {
        $(`#error-${fieldName}`).text(message).addClass('show');
    }

    function clearFieldError(fieldName) {
        $(`#error-${fieldName}`).removeClass('show').text('');
    }

    function clearAllErrors() {
        $('.error-message').removeClass('show').text('');
        $('.form-group input, .form-group select').removeClass('error');
    }

    function showError(message) {
        $('#errorMessage').text(message);
        $('#errorCard').slideDown(300);
        
        // Scroll to error
        $('html, body').animate({
            scrollTop: $('#errorCard').offset().top - 100
        }, 500);
    }

    function hideError() {
        $('#errorCard').slideUp(300);
    }

    function searchCellLocation() {
        // Validate first
        if (!validateForm()) {
            showAlert('error', 'Mohon lengkapi semua field dengan benar');
            return;
        }

        hideError();
        isSubmitting = true;

        const formData = {
            radio_type: $('#radioType').val(),
            mcc: $('#mcc').val(),
            mnc: $('#mnc').val(),
            lac: $('#lac').val(),
            cid: $('#cid').val(),
        };

        // Update button state
        const submitBtn = $('#submitBtn');
        const btnText = $('#btnText');
        submitBtn.prop('disabled', true);
        btnText.text('Mencari...');

        // Show loading
        showLoading();
        $('#resultSection').removeClass('show');

        $.ajax({
            url: '{{ route("api.search") }}',
            method: 'POST',
            data: formData,
            timeout: 30000, // 30 seconds timeout
            success: function(response) {
                hideLoading();
                isSubmitting = false;
                submitBtn.prop('disabled', false);
                btnText.text('Cari Lokasi BTS');

                if (response.success && response.data) {
                    displayResult(response.data, formData);
                    showAlert('success', ' ' + response.message);
                    
                    // Scroll to result
                    setTimeout(() => {
                        $('html, body').animate({
                            scrollTop: $('#resultSection').offset().top - 100
                        }, 500);
                    }, 300);
                } else {
                    showError(response.message || 'Lokasi tidak ditemukan');
                }
            },
            error: function(xhr, status, error) {
                hideLoading();
                isSubmitting = false;
                submitBtn.prop('disabled', false);
                btnText.text('Cari Lokasi BTS');

                let errorMessage = 'Terjadi kesalahan saat mencari lokasi BTS.';

                if (status === 'timeout') {
                    errorMessage = 'Request timeout. Koneksi terlalu lama. Silakan coba lagi.';
                } else if (xhr.status === 0) {
                    errorMessage = 'Tidak ada koneksi internet. Pastikan Anda terhubung ke internet.';
                } else if (xhr.status === 400) {
                    errorMessage = xhr.responseJSON?.message || 'Data yang Anda masukkan tidak valid.';
                } else if (xhr.status === 422) {
                    // Validation errors
                    const errors = xhr.responseJSON?.errors;
                    if (errors) {
                        errorMessage = 'Validasi gagal:\n';
                        Object.keys(errors).forEach(key => {
                            errorMessage += `- ${errors[key][0]}\n`;
                        });
                    }
                } else if (xhr.status === 500) {
                    errorMessage = 'Terjadi kesalahan pada server. Silakan coba lagi nanti.';
                } else if (xhr.responseJSON?.message) {
                    errorMessage = xhr.responseJSON.message;
                }

                showError(errorMessage);
                showAlert('error', ' Pencarian gagal');

                console.error('Error details:', {
                    status: xhr.status,
                    statusText: xhr.statusText,
                    response: xhr.responseJSON,
                    error: error
                });
            }
        });
    }

    function displayResult(data, params) {
    try {
        // Validate data
        if (!data.lat || !data.lon) {
            throw new Error('Koordinat tidak valid');
        }

        // Check accuracy level
        let accuracyWarning = '';
        let accuracyClass = '';
        
        if (data.accuracy > 10000) {
            accuracyWarning = `
                <div style="background: #fee2e2; border-left: 4px solid #ef4444; padding: 16px; border-radius: 8px; margin-bottom: 20px;">
                    <h4 style="color: #991b1b; margin-bottom: 8px; display: flex; align-items: center; gap: 8px;">
                        <span style="font-size: 18px;"></span>
                        <span>Akurasi Sangat Rendah</span>
                    </h4>
                    <p style="color: #7f1d1d; font-size: 13px; line-height: 1.6;">
                        Cell ID yang Anda masukkan kemungkinan <strong>tidak ditemukan</strong> di database. 
                        Hasil ini hanya <strong>estimasi area berdasarkan LAC</strong> dengan radius ketidakpastian <strong>${data.accuracy}m (~${(data.accuracy/1000).toFixed(1)}km)</strong>.
                        <br><br>
                        <strong>Saran:</strong> Periksa kembali Cell ID Anda atau coba dengan Cell ID lain.
                    </p>
                </div>
            `;
            accuracyClass = 'low-accuracy';
        } else if (data.accuracy > 5000) {
            accuracyWarning = `
                <div style="background: #fef3c7; border-left: 4px solid #f59e0b; padding: 16px; border-radius: 8px; margin-bottom: 20px;">
                    <h4 style="color: #92400e; margin-bottom: 8px; display: flex; align-items: center; gap: 8px;">
                        <span style="font-size: 18px;"></span>
                        <span>Akurasi Rendah</span>
                    </h4>
                    <p style="color: #78350f; font-size: 13px; line-height: 1.6;">
                        Akurasi lokasi cukup rendah (${data.accuracy}m). Hasil mungkin tidak tepat. 
                        Lokasi yang ditampilkan adalah estimasi dengan radius ketidakpastian ~${(data.accuracy/1000).toFixed(1)}km.
                    </p>
                </div>
            `;
            accuracyClass = 'medium-accuracy';
        } else if (data.accuracy > 1000) {
            accuracyWarning = `
                <div style="background: #dbeafe; border-left: 4px solid #3b82f6; padding: 12px; border-radius: 8px; margin-bottom: 20px;">
                    <p style="color: #1e40af; font-size: 13px;">
                         Akurasi moderate (${data.accuracy}m). Lokasi cukup akurat dengan radius ~${(data.accuracy/1000).toFixed(1)}km.
                    </p>
                </div>
            `;
            accuracyClass = 'good-accuracy';
        } else {
            accuracyWarning = `
                <div style="background: #d1fae5; border-left: 4px solid #10b981; padding: 12px; border-radius: 8px; margin-bottom: 20px;">
                    <p style="color: #065f46; font-size: 13px;">
                         Akurasi tinggi! Lokasi BTS sangat akurat dengan radius ${data.accuracy}m.
                    </p>
                </div>
            `;
            accuracyClass = 'high-accuracy';
        }

        const resultInfo = `
            ${accuracyWarning}
            <div class="info-item">
                <div class="info-item-label">Latitude</div>
                <div class="info-item-value">${parseFloat(data.lat).toFixed(6)}</div>
            </div>
            <div class="info-item">
                <div class="info-item-label">Longitude</div>
                <div class="info-item-value">${parseFloat(data.lon).toFixed(6)}</div>
            </div>
            <div class="info-item ${accuracyClass}">
                <div class="info-item-label">Accuracy</div>
                <div class="info-item-value">${data.accuracy} m</div>
                <div style="font-size: 11px; margin-top: 4px; color: #64748b;">
                    (~${(data.accuracy/1000).toFixed(2)} km)
                </div>
            </div>
            <div class="info-item">
                <div class="info-item-label">Address</div>
                <div class="info-item-value" style="font-size: 13px;">${data.address || 'N/A'}</div>
            </div>
        `;

        $('#resultInfo').html(resultInfo);

        // Clear previous markers
        if (marker) {
            map.removeLayer(marker);
        }
        if (circle) {
            map.removeLayer(circle);
        }

        // Add new marker
        marker = L.marker([data.lat, data.lon], {
            title: 'Lokasi BTS'
        }).addTo(map);

        const popupContent = `
            <div style="min-width: 200px;">
                <strong style="font-size: 14px; color: #1a1f36;"> Lokasi BTS</strong><br>
                <div style="margin-top: 8px; font-size: 12px; line-height: 1.6;">
                    <strong>Radio:</strong> ${params.radio_type.toUpperCase()}<br>
                    <strong>MCC:</strong> ${params.mcc}<br>
                    <strong>MNC:</strong> ${params.mnc}<br>
                    <strong>LAC:</strong> ${params.lac}<br>
                    <strong>CID:</strong> ${params.cid}<br>
                    <strong>Accuracy:</strong> ${data.accuracy}m
                    ${data.accuracy > 5000 ? '<br><span style="color: #ef4444; font-weight: 600;"> Low Accuracy</span>' : ''}
                </div>
            </div>
        `;

        marker.bindPopup(popupContent).openPopup();

        // Circle color based on accuracy
        let circleColor = '#4F7CFF';
        if (data.accuracy > 10000) {
            circleColor = '#ef4444'; // Red for very low accuracy
        } else if (data.accuracy > 5000) {
            circleColor = '#f59e0b'; // Orange for low accuracy
        } else if (data.accuracy > 1000) {
            circleColor = '#3b82f6'; // Blue for moderate
        } else {
            circleColor = '#10b981'; // Green for high accuracy
        }

        // Add accuracy circle
        circle = L.circle([data.lat, data.lon], {
            radius: data.accuracy,
            color: circleColor,
            fillColor: circleColor,
            fillOpacity: 0.15,
            weight: 2
        }).addTo(map);

        // Fit map to show marker and circle
        const bounds = circle.getBounds();
        map.fitBounds(bounds, { 
            padding: [50, 50],
            maxZoom: 16
        });

        // Show result section with animation
        $('#resultSection').addClass('show');

        // Fix map rendering
        setTimeout(() => {
            map.invalidateSize();
        }, 400);

        // Show warning alert if accuracy is too low
        if (data.accuracy > 10000) {
            showAlert('warning', ' Akurasi sangat rendah! Cell ID mungkin tidak valid.');
        } else if (data.accuracy > 5000) {
            showAlert('warning', ' Akurasi rendah. Hasil adalah estimasi area.');
        }

    } catch (error) {
        console.error('Display result error:', error);
        showError('Gagal menampilkan hasil: ' + error.message);
    }
}
</script>
