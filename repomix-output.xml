@push('scripts')
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
let previewMap, resultMap;
let previewLayers = [];
let resultLayers = [];
let updateTimeout = null;

// Initialize on DOM ready
document.addEventListener('DOMContentLoaded', function() {
    try {
        console.log(' Initializing maps...');
        
        // Preview Map
        previewMap = L.map('preview-map').setView([-7.797068, 110.370529], 12);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: ' OpenStreetMap',
            maxZoom: 18
        }).addTo(previewMap);

        // Result Map
        resultMap = L.map('result-map').setView([-7.797068, 110.370529], 12);
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: ' OpenStreetMap',
            maxZoom: 18
        }).addTo(resultMap);

        console.log(' Maps initialized successfully');

        // Initial preview
        updatePreview();

        // Add input listeners
        const inputs = ['lat1', 'lng1', 'radius1', 'lat2', 'lng2', 'radius2', 'lat3', 'lng3', 'radius3'];
        inputs.forEach(id => {
            const input = document.getElementById(id);
            if (input) {
                input.addEventListener('input', function() {
                    // Clear previous timeout
                    if (updateTimeout) {
                        clearTimeout(updateTimeout);
                    }
                    // Set new timeout
                    updateTimeout = setTimeout(updatePreview, 500);
                });
            }
        });

    } catch (error) {
        console.error(' Map initialization error:', error);
    }
});

// Update preview map
function updatePreview() {
    try {
        // Clear previous layers
        previewLayers.forEach(layer => {
            try {
                previewMap.removeLayer(layer);
            } catch (e) {
                // Ignore if already removed
            }
        });
        previewLayers = [];

        const locations = [
            {
                lat: parseFloat(document.getElementById('lat1').value) || 0,
                lng: parseFloat(document.getElementById('lng1').value) || 0,
                radius: parseFloat(document.getElementById('radius1').value) || 0,
                color: '#ef4444',
                label: 'Tower 1'
            },
            {
                lat: parseFloat(document.getElementById('lat2').value) || 0,
                lng: parseFloat(document.getElementById('lng2').value) || 0,
                radius: parseFloat(document.getElementById('radius2').value) || 0,
                color: '#3b82f6',
                label: 'Tower 2'
            },
            {
                lat: parseFloat(document.getElementById('lat3').value) || 0,
                lng: parseFloat(document.getElementById('lng3').value) || 0,
                radius: parseFloat(document.getElementById('radius3').value) || 0,
                color: '#10b981',
                label: 'Tower 3'
            }
        ];

        const validLocations = locations.filter(loc => 
            loc.lat && loc.lng && loc.radius &&
            Math.abs(loc.lat) <= 90 && Math.abs(loc.lng) <= 180 &&
            loc.radius >= 100 && loc.radius <= 50000
        );

        if (validLocations.length === 0) {
            console.log('No valid locations to display');
            return;
        }

        validLocations.forEach(loc => {
            // Add circle
            const circle = L.circle([loc.lat, loc.lng], {
                color: loc.color,
                fillColor: loc.color,
                fillOpacity: 0.1,
                radius: loc.radius,
                weight: 2
            });
            circle.addTo(previewMap);
            previewLayers.push(circle);

            // Add marker
            const icon = L.divIcon({
                html: '<div style="font-size: 20px; text-shadow: 2px 2px 4px rgba(0,0,0,0.3);"></div>',
                className: '',
                iconSize: [20, 20],
                iconAnchor: [10, 10]
            });
            
            const marker = L.marker([loc.lat, loc.lng], { icon: icon });
            marker.bindPopup(`<b style="color: ${loc.color};">${loc.label}</b><br><small>Lat: ${loc.lat.toFixed(6)}<br>Lng: ${loc.lng.toFixed(6)}<br>Radius: ${loc.radius.toLocaleString()}m</small>`);
            marker.addTo(previewMap);
            previewLayers.push(marker);
        });

        // Fit bounds
        if (previewLayers.length > 0) {
            const bounds = L.featureGroup(previewLayers).getBounds();
            previewMap.fitBounds(bounds.pad(0.2));
        }

        console.log(' Preview updated');

    } catch (error) {
        console.error(' Preview update error:', error);
    }
}

// Validate inputs
function validateInputs() {
    const values = {
        lat1: parseFloat(document.getElementById('lat1').value),
        lng1: parseFloat(document.getElementById('lng1').value),
        r1: parseFloat(document.getElementById('radius1').value),
        lat2: parseFloat(document.getElementById('lat2').value),
        lng2: parseFloat(document.getElementById('lng2').value),
        r2: parseFloat(document.getElementById('radius2').value),
        lat3: parseFloat(document.getElementById('lat3').value),
        lng3: parseFloat(document.getElementById('lng3').value),
        r3: parseFloat(document.getElementById('radius3').value)
    };

    // Check NaN
    for (let key in values) {
        if (isNaN(values[key])) {
            throw new Error('Semua field harus diisi dengan angka yang valid!');
        }
    }

    // Validate ranges
    const lats = [values.lat1, values.lat2, values.lat3];
    const lngs = [values.lng1, values.lng2, values.lng3];
    const radii = [values.r1, values.r2, values.r3];

    lats.forEach(lat => {
        if (Math.abs(lat) > 90) throw new Error('Latitude harus antara -90 sampai 90!');
    });

    lngs.forEach(lng => {
        if (Math.abs(lng) > 180) throw new Error('Longitude harus antara -180 sampai 180!');
    });

    radii.forEach(r => {
        if (r < 100 || r > 50000) throw new Error('Radius harus antara 100m sampai 50,000m!');
    });

    // Check duplicates
    if ((values.lat1 === values.lat2 && values.lng1 === values.lng2) ||
        (values.lat1 === values.lat3 && values.lng1 === values.lng3) ||
        (values.lat2 === values.lat3 && values.lng2 === values.lng3)) {
        throw new Error('Koordinat ketiga BTS tower harus berbeda!');
    }

    return values;
}

// Calculate triangulation
function calculateTriangulation() {
    const btn = document.getElementById('calculateBtn');
    const btnText = document.getElementById('btnText');
    const btnSpinner = document.getElementById('btnSpinner');

    try {
        console.log(' Starting calculation...');
        
        // Show loading
        btn.disabled = true;
        btnText.textContent = 'Menghitung...';
        btnSpinner.classList.remove('hidden');

        // Validate
        const values = validateInputs();

        // Calculate centroid
        const resultLat = (values.lat1 + values.lat2 + values.lat3) / 3;
        const resultLng = (values.lng1 + values.lng2 + values.lng3) / 3;

        console.log(' Result:', { lat: resultLat, lng: resultLng });

        // Clear previous result layers
        resultLayers.forEach(layer => {
            try {
                resultMap.removeLayer(layer);
            } catch (e) {
                // Ignore
            }
        });
        resultLayers = [];

        // Draw on result map
        const locations = [
            { lat: values.lat1, lng: values.lng1, radius: values.r1, color: '#ef4444', label: 'Tower 1' },
            { lat: values.lat2, lng: values.lng2, radius: values.r2, color: '#3b82f6', label: 'Tower 2' },
            { lat: values.lat3, lng: values.lng3, radius: values.r3, color: '#10b981', label: 'Tower 3' }
        ];

        locations.forEach(loc => {
            const circle = L.circle([loc.lat, loc.lng], {
                color: loc.color,
                fillColor: loc.color,
                fillOpacity: 0.15,
                radius: loc.radius,
                weight: 2
            });
            circle.addTo(resultMap);
            resultLayers.push(circle);

            const icon = L.divIcon({
                html: '<div style="font-size: 24px; text-shadow: 2px 2px 4px rgba(0,0,0,0.4);"></div>',
                className: '',
                iconSize: [24, 24],
                iconAnchor: [12, 12]
            });
            
            const marker = L.marker([loc.lat, loc.lng], { icon: icon });
            marker.bindPopup(`<div style="text-align: center;"><b style="color: ${loc.color};">${loc.label}</b><br><small>Lat: ${loc.lat.toFixed(6)}<br>Lng: ${loc.lng.toFixed(6)}<br>Coverage: ${loc.radius.toLocaleString()}m</small></div>`);
            marker.addTo(resultMap);
            resultLayers.push(marker);
        });

        // Target marker
        const targetIcon = L.divIcon({
            html: '<div style="font-size: 32px; text-shadow: 3px 3px 6px rgba(0,0,0,0.5);"></div>',
            className: '',
            iconSize: [32, 32],
            iconAnchor: [16, 32]
        });

        const targetMarker = L.marker([resultLat, resultLng], { icon: targetIcon });
        targetMarker.bindPopup(`<div style="text-align: center; min-width: 150px;"><b style="color: #6366f1; font-size: 14px;"> LOKASI TARGET</b><br><div style="margin-top: 8px; background: #eff6ff; padding: 8px; border-radius: 6px; font-size: 12px;"><b>Hasil Triangulasi:</b><br>Lat: ${resultLat.toFixed(6)}<br>Lng: ${resultLng.toFixed(6)}</div></div>`);
        targetMarker.addTo(resultMap);
        targetMarker.openPopup();
        resultLayers.push(targetMarker);

        // Fit bounds
        const bounds = L.featureGroup(resultLayers).getBounds();
        resultMap.fitBounds(bounds.pad(0.15));

        // Display info
        const avgRadius = Math.round((values.r1 + values.r2 + values.r3) / 3);
        document.getElementById('resultInfo').innerHTML = `
            <div class="bg-gradient-to-br from-indigo-50 to-indigo-100 p-4 rounded-lg border border-indigo-200">
                <div class="text-xs font-bold text-indigo-600 mb-1 uppercase">Latitude</div>
                <div class="text-xl font-bold text-indigo-900">${resultLat.toFixed(6)}</div>
            </div>
            <div class="bg-gradient-to-br from-purple-50 to-purple-100 p-4 rounded-lg border border-purple-200">
                <div class="text-xs font-bold text-purple-600 mb-1 uppercase">Longitude</div>
                <div class="text-xl font-bold text-purple-900">${resultLng.toFixed(6)}</div>
            </div>
            <div class="bg-gradient-to-br from-blue-50 to-blue-100 p-4 rounded-lg border border-blue-200">
                <div class="text-xs font-bold text-blue-600 mb-1 uppercase">Avg Coverage</div>
                <div class="text-xl font-bold text-blue-900">${avgRadius.toLocaleString()}m</div>
                <div class="text-xs text-blue-600 mt-1">~${(avgRadius/1000).toFixed(1)}km</div>
            </div>
        `;

        // Show result section
        document.getElementById('resultSection').classList.remove('hidden');
        setTimeout(() => {
            document.getElementById('resultSection').scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }, 100);

        // Use global alert if available
        if (typeof window.showAlert === 'function') {
            window.showAlert('success', ' Triangulasi berhasil dihitung!');
        }

        console.log(' Calculation complete');

    } catch (error) {
        console.error(' Calculation error:', error);
        
        // Use global alert if available
        if (typeof window.showAlert === 'function') {
            window.showAlert('error', ' ' + error.message);
        } else {
            alert('Error: ' + error.message);
        }
    } finally {
        // Reset button
        setTimeout(() => {
            btn.disabled = false;
            btnText.textContent = ' Hitung Triangulasi';
            btnSpinner.classList.add('hidden');
        }, 500);
    }
}

// Reset calculation
function resetCalculation() {
    document.getElementById('resultSection').classList.add('hidden');
    
    resultLayers.forEach(layer => {
        try {
            resultMap.removeLayer(layer);
        } catch (e) {
            // Ignore
        }
    });
    resultLayers = [];
    
    if (typeof window.showAlert === 'function') {
        window.showAlert('success', 'Reset berhasil!');
    }
    
    console.log(' Reset complete');
}
</script>

